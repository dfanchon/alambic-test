    "fields" : {
      "id" : {
        "type" : "String",
        "required" : true,
        "description" : "Post Id"
      },
      "text" : {
        "type" : "String",
        "description" : "Post Text"
      },
      "author" : {
        "type" : "String",
        "description" : "Author Id"
      }
    },
    "expose" : true,
    "singleEndpoint" : {
      "name" : "fpost",
      "args" : {
        "id" : {
          "type" : "String",
